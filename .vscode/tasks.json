{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "${fileDirname}/libft/*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "gcc build with Wflags & exec output",
            "command": "sh",
            "args": [
                "./commands/gcwout.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "proot" : "${workspaceFolder}"
                }
            },
            "group": "none",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}
