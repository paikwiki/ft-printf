{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "gcc build ft_printf project",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/*.c",
                "${workspaceFolder}/libft/*.c",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "gcc build with Wflags & exec main",
            "command": "sh",
            "args": [
                "./commands/gcwout.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "proot": "${workspaceFolder}"
                }
            },
            "group": "none",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "gcc build with Wflags & exec active file",
            "command": "sh",
            "args": [
                "./commands/gcwout_active.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "proot": "${workspaceFolder}/playground",
                    "active_file": "${fileBasename}"
                }
            },
            "group": "none",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}